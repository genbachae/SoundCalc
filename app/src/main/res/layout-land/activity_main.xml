<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:textSize="28sp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="28sp"
            android:gravity="right"
            android:text="результат" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/iBCE"
                android:layout_width="75sp"
                android:layout_height="wrap_content"
                android:textSize="33sp"
                android:onClick="clickCE"
                android:text="CE" />

            <Button
                android:id="@+id/iBdelit"
                android:layout_width="50sp"
                android:layout_height="wrap_content"
                android:textSize="33sp"
                android:text="/" />

            <Button
                android:id="@+id/iBmnojit"
                android:layout_width="50sp"
                android:layout_height="wrap_content"
                android:textSize="33sp"
                android:text="*" />


            <Button
                android:id="@+id/iBminus"
                android:layout_width="50sp"
                android:layout_height="wrap_content"
                android:textSize="33sp"
                android:text="-" />

            <Button
                android:id="@+id/iBplus"
                android:layout_width="50sp"
                android:layout_height="wrap_content"
                android:textSize="33sp"
                android:text="+" />

            <Button
                android:id="@+id/iBtochka"
                android:layout_width="50sp"
                android:layout_height="wrap_content"
                android:textSize="33sp"
                android:text="." />

            <Button
                android:id="@+id/iBinvertirovat"
                android:layout_width="75sp"
                android:layout_height="wrap_content"
                android:textSize="33sp"
                android:onClick="clickInvert"
                android:text="+/-" />

            <Button
                android:id="@+id/iBbackspace"
                android:layout_width="50sp"
                android:layout_height="wrap_content"
                android:textSize="33sp"
                android:onClick="clickBackspace"
                android:text="С" />

            <Button
                android:id="@+id/iBravno"
                android:layout_width="50sp"
                android:layout_height="wrap_content"
                android:textSize="33sp"
                android:text="=" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/iB0"
                android:layout_width="50sp"
                android:layout_height="wrap_content"
                android:textSize="33sp"
                android:text="0" />

            <Button
                android:id="@+id/iB1"
                android:layout_width="50sp"
                android:layout_height="wrap_content"
                android:textSize="33sp"
                android:text="1" />

            <Button
                android:id="@+id/iB2"
                android:layout_width="50sp"
                android:layout_height="wrap_content"
                android:textSize="33sp"
                android:text="2" />

            <Button
                android:id="@+id/iB3"
                android:layout_width="50sp"
                android:layout_height="wrap_content"
                android:textSize="33sp"
                android:text="3" />

            <Button
                android:id="@+id/iB4"
                android:layout_width="50sp"
                android:layout_height="wrap_content"
                android:textSize="33sp"
                android:text="4" />

            <Button
                android:id="@+id/iB5"
                android:layout_width="50sp"
                android:layout_height="wrap_content"
                android:textSize="33sp"
                android:text="5" />

            <Button
                android:id="@+id/iB6"
                android:layout_width="50sp"
                android:layout_height="wrap_content"
                android:textSize="33sp"
                android:text="6" />

            <Button
                android:id="@+id/iB7"
                android:layout_width="50sp"
                android:layout_height="wrap_content"
                android:textSize="33sp"
                android:text="7" />

            <Button
                android:id="@+id/iB8"
                android:layout_width="50sp"
                android:layout_height="wrap_content"
                android:textSize="33sp"
                android:text="8" />

            <Button
                android:id="@+id/iB9"
                android:layout_width="50sp"
                android:layout_height="wrap_content"
                android:textSize="33sp"
                android:text="9" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>